<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>User</th>
      <th>Resume</th>
      <th>Office address</th>
      <th>Stay</th>
      <th>Current address</th>
      <th>Permenent address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.address %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.user_id %></td>
        <td><%= address.resume_id %></td>
        <td><%= address.office_address %></td>
        <td><%= address.stay %></td>
        <td><%= address.current_address %></td>
        <td><%= address.permenent_address %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

