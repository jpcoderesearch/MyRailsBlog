<h1>Listing skills</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Last used</th>
      <th>Project</th>
      <th>Percentage</th>
      <th>Expert level</th>
      <th>User</th>
      <th>Resume</th>
      <th>Company</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= skill.version %></td>
        <td><%= skill.last_used %></td>
        <td><%= skill.project %></td>
        <td><%= skill.percentage %></td>
        <td><%= skill.expert_level %></td>
        <td><%= skill.user_id %></td>
        <td><%= skill.resume_id %></td>
        <td><%= skill.company_id %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

